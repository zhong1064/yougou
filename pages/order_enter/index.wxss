
.header-title {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  align-items: center;
}
.header-right {
  margin-right: 40rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}

.header-address {
  padding: 20rpx;
}
.header-img {
  display: block;
  height: 20rpx;
  width: 750rpx;
}
.goods-title {
  box-sizing: border-box;
  padding: 30rpx;
  border-top:8px solid #ccc;
  border-bottom: 1px solid #ccc;
}
.goods-title text {
  margin-right: 10px;
}
.goods {
  margin-bottom: 120rpx;
}
.goods-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
}
.goods-left {
  display: flex; 
  flex-shrink: 0;
  align-items: center;
}
.goods-left image {
 height: 160rpx;
  width: 160rpx;
  flex-shrink: 0;
}
.goods-left icon {
  margin-right: 20rpx;
}
.good-right {
  width: 100%;
   padding: 20rpx;
}
.goods-info {
   display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goods-content {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.goods-btn {
  position: relative;
  z-index: 2;
  width: 20px;
  height: 20px;
  border: 1px solid #999;
  text-align: center;
  line-height: 20px;
}

.checkout {
  
  border-top: 20rpx solid #ccc;
  background: #fff;
  position: fixed;
  bottom: 90rpx;
  left:0;
  height: 100rpx;
  width: 750rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ccc;
}
.checkall {
  display: flex;
  margin-left: 20rpx;

}
.checkall icon {
  margin-right: 20rpx;
}
.allPrice {
  flex: 1;
  margin-left: 80rpx;
}
.price-top text {
  color: red;
}
.cost {
  color:#999;
  font-size: 14px;
}
.calc-btn {
  width: 30%;
  background: #eb4450;
  height:100%;
  display: flex;
  align-items: center;
  justify-content: center;
}